{
  "name": "duwallet",
  "version": "0.1.0",
  "private": true,
  "description": "共同家計簿PWA",
  "author": "ai-agent",
  "scripts": {
    "dev": "pnpm --filter @duwallet/web dev",
    "build": "pnpm --filter @duwallet/web build",
    "start": "pnpm --filter @duwallet/web start",
    "lint": "pnpm --filter @duwallet/web lint",
    "test": "pnpm --filter @duwallet/web test",
    "test:e2e": "pnpm --filter @duwallet/web test:e2e",
    "test:all": "pnpm --filter @duwallet/web test:all",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "docs:build": "echo \"Scripts for building docs will be implemented here\"",
    "db:reset": "echo \"Scripts for resetting DB will be implemented here\"",
    "prepare": "husky install",
    "vercel-build": "cd apps/web && pnpm install && pnpm build"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.1",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "autoprefixer": "^10.4.16",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.3.1",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "ts-jest": "^29.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.12.0"
}
